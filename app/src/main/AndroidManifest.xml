<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartblanket">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/thumbnail"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".HistoryActivity" android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".ChangingPassword"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".SetupActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".OnePatientViewActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".DeletePatientActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".AddPatientActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>